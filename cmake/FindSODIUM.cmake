FIND_PATH(SODIUM_INCLUDE_DIR sodium.h /usr/include/sodium
	/usr/local/include/sodium)
IF (SODIUM_USE_STATIC_LIBRARY)
	set(CMAKE_FIND_LIBRARY_SUFFIXES .a)
ENDIF()
FIND_LIBRARY(SODIUM_LIBRARY NAMES sodium PATH /usr/lib
	/usr/local/lib)
IF (SODIUM_INCLUDE_DIR AND SODIUM_LIBRARY)
	SET(SODIUM_FOUND TRUE)
ENDIF (SODIUM_INCLUDE_DIR AND SODIUM_LIBRARY)
IF (SODIUM_FOUND)
	IF (NOT SODIUM_FIND_QUIETLY)
		MESSAGE(STATUS "Found Sodium: ${SODIUM_LIBRARY}")
	ENDIF (NOT SODIUM_FIND_QUIETLY)
ELSE (SODIUM_FOUND)
	IF (SODIUM_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could not find sodium library")
	ENDIF (SODIUM_FIND_REQUIRED)
ENDIF (SODIUM_FOUND)
